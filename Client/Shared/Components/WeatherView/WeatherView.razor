@using BlazorDemo.Client.Shared.Components.DataTable
@using BlazorDemo.Client.Shared.Components.DetailList
@using BlazorDemo.Client.Shared.Components.Graphics
@using BlazorDemo.Client.Shared.Components.Map
@using BlazorDemo.Client.Shared.Components.Rows
@using BlazorDemo.Client.Shared.Models

<main class="weather-view">
    <DataTable>
        <Column title="Wind">
            <RowTitle Title="13 kt" />
            <RowTitleLabel
                Title="40 kt"
                Label="Current Gust"
            />
            <RowTitleLabel
                Title="N"
                Label="Wind Direction"
            />
        </Column>
        <Column title="Tide">
            <RowTitle Title="Dropping" />
            <RowTideForecaset
                Label="Next High Tide"
                TideForecaset="1m at 10:51 WST"
                RelativeTime="in 18 hours"
            />
            <RowTideForecaset
                Label="Next Low Tide"
                TideForecaset="0.99m at 12:30 WST"
                RelativeTime="in 2 hours"
            />
        </Column>
        <Column title="Wave">
            <DetailList ListContent="@ExampleListContent" />
        </Column>
        <Column title="Weather">
            <RowTitle Title="18.4Â°C" />
            <RowTitleLabel
                Title="80%"
                Label="Humidity"
            />
            <RowTitleLabel
                Title="1009 hPa"
                Label="Air Pressure"
            />
        </Column>
    </DataTable>
    <Map MapPoints="@MapPointsContent">
        <MapOfFremantle />
    </Map>
</main>

@code {
    [Parameter]
    public List<DetailListItemModel> ExampleListContent { get; set; }

    [Parameter]
    public List<MapPointModel> MapPointsContent { get; set; }
}
